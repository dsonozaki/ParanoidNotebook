<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cmd" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amtheme</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/navbar</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/navbar</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/amtheme</item>
        <item name="android:itemBackground">@color/navbar</item>
        <item name="android:itemTextAppearance">@style/MenuText</item>
        <item name="android:popupBackground">@android:color/transparent</item>
    </style>

  <style name="ErrorText" parent="TextAppearance.Design.Error">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/red</item>
  </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="colorPrimary">@color/amtheme</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DarkDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:background">@color/navbar</item>
        <item name="android:textColorPrimary">@color/whitetext</item>
        <item name="android:colorButtonNormal">@color/amtheme</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/amtheme</item>
        <item name="rippleColor">@color/amtheme</item>
    </style>

    <style name="MenuText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/whitetext</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/navbar</item>
    </style>

    <style name="MyCalendar" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="android:textColor">@color/whitetext</item>
    </style>

</resources>
