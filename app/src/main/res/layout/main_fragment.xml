<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/mainfragment">

  <data>

    <variable
      name="viewmodel"
      type="com.example.cmd.presentation.viewmodels.MainVM" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
      android:id="@+id/progressBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
      app:layout_constraintEnd_toEndOf="@+id/scrollView2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:progressBarFromStartState = "@{viewmodel.currentState}"/>

    <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintVertical_bias="0.0">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/textInputLayout3"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:inputType="textMultiLine"
          android:textColorHint="@color/lightgrey"
          app:boxStrokeColor="@null"
          app:hintEnabled="false"
          app:layout_constraintBaseline_toTopOf="@+id/guideline19"
          app:textInputLayoutFromStartState = "@{viewmodel.currentState}">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/notebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:gravity="top"
            android:paddingStart="0dp"
            android:paddingTop="4dp"
            android:background="#00000000"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:textColor="@color/whitetext"
            android:textColorHint="@color/lightgrey"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="20sp"
            app:textInputFromStartState = "@{viewmodel.currentState}"/>

        </com.google.android.material.textfield.TextInputLayout>

      </LinearLayout>
    </ScrollView>


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
