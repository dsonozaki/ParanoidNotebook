<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundTint="#8A3E3E"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
      android:id="@+id/size"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:singleLine="true"
      android:textSize="16sp"
      app:layout_constraintStart_toEndOf="@+id/priority"
      app:layout_constraintTop_toBottomOf="@+id/path" />


    <ImageView
      android:id="@+id/edit"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="?attr/colorPrimary"
      android:minWidth="48dp"
      android:padding="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintStart_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_baseline_edit_24_background" />

    <ImageView
      android:id="@+id/delete"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="?attr/colorError"
      android:padding="10dp"
      app:layout_constraintBottom_toBottomOf="@+id/edit"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintStart_toEndOf="@id/edit"
      app:layout_constraintTop_toTopOf="@+id/edit"
      app:srcCompat="@drawable/ic_baseline_delete_outline_24_red"
      app:tint="?attr/background" />

    <TextView
      android:id="@+id/priority"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:singleLine="true"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="@+id/path"
      app:layout_constraintTop_toTopOf="@+id/size" />
    <!--android:textColor="@color/textcolor"-->


    <TextView
      android:id="@+id/path"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:ellipsize="start"
      android:singleLine="true"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageView2"
      app:layout_constraintTop_toTopOf="@+id/edit" />
    <!--android:textColor="@color/textcolor"-->

    <ImageView
      android:id="@+id/imageView2"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:paddingTop="6dp"
      android:paddingBottom="2dp"
      app:layout_constraintBottom_toBottomOf="@+id/delete"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/delete" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
